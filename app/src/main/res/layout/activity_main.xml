<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_province"
        android:layout_width="411dp"
        android:layout_height="235dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/amnatcharoen_img" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="กรุณาเลือกจังหวัด"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_province" />

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="303dp"
        android:layout_height="246dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:text="ลองกดปุ่ม"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <Button
        android:id="@+id/btn_amnatcharoen"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_marginBottom="60dp"
        android:text="@string/btn_amnatcharoen"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_history" />

    <Button
        android:id="@+id/btn_nongbualamphu"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="60dp"
        android:text="@string/btn_nongbualamphu"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_amnatcharoen"
        app:layout_constraintTop_toTopOf="@+id/btn_amnatcharoen"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_pathumthani"
        android:layout_width="68dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        android:text="@string/btn_pathumthani"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_suphanburi"
        app:layout_constraintStart_toEndOf="@+id/btn_nongbualamphu" />

    <Button
        android:id="@+id/btn_suphanburi"
        android:layout_width="74dp"
        android:layout_height="39dp"
        android:layout_marginBottom="60dp"
        android:text="@string/btn_suphanburi"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_history"
        app:layout_constraintTop_toTopOf="@+id/btn_pathumthani" />

</androidx.constraintlayout.widget.ConstraintLayout>